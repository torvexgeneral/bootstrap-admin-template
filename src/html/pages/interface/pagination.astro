---
import AdminLayout from '../../layouts/admin/admin-layout.astro'
import ComponentPreview from '../../components/component-preview/component-preview.astro'
import Toc from '../../components/toc/toc.astro'
import PageHeader from '../../components/common/page-header.astro'
import { getPathPrefix } from '../../../utils/path.js'

// Page header configuration with breadcrumb navigation
const paginationPageHeader = {
  title: 'Pagination',
  breadcrumbs: [
    { label: 'Dashboard', href: getPathPrefix('/dashboard') },
    { label: 'Interface', href: getPathPrefix('/interface') },
    { label: 'Pagination', class: 'active' }
  ]
}

// Basic pagination example with text navigation
const basicPaginationExample = `<nav aria-label="Basic pagination navigation">
  <ul class="pagination">
    <li class="page-item"><a class="page-link" href="#"><i class="ri-arrow-left-line"></i> Previous</a></li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item"><a class="page-link" href="#">Next <i class="ri-arrow-right-line"></i></a></li>
  </ul>
</nav>
`

// Icon-based pagination with enhanced accessibility
const iconPaginationExample = `<nav aria-label="Icon-based pagination navigation">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Navigate to previous page">
        <i class="ri-arrow-left-s-line" aria-hidden="true"></i>
      </a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Navigate to next page">
        <i class="ri-arrow-right-s-line" aria-hidden="true"></i>
      </a>
    </li>
  </ul>
</nav>
`

// Pagination with active and disabled states
const statesPaginationExample = `<nav aria-label="Pagination with states">
  <ul class="pagination">
    <li class="page-item disabled">
      <a class="page-link" tabindex="-1"><i class="ri-arrow-left-line"></i> Previous</a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item active" aria-current="page">
      <a class="page-link" href="#">2</a>
    </li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#">Next <i class="ri-arrow-right-line"></i></a>
    </li>
  </ul>
</nav>
`

// Large-sized pagination example
const largePaginationExample = `<nav aria-label="Large pagination example">
  <ul class="pagination pagination-lg">
    <li class="page-item active" aria-current="page">
      <span class="page-link">1</span>
    </li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
  </ul>
</nav>
`

// Small-sized pagination example
const smallPaginationExample = `<nav aria-label="Small pagination example">
  <ul class="pagination pagination-sm">
    <li class="page-item active" aria-current="page">
      <span class="page-link">1</span>
    </li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
  </ul>
</nav>
`

// Centered pagination example
const centeredPaginationExample = `<nav aria-label="Centered pagination example">
  <ul class="pagination justify-content-center">
    <li class="page-item disabled">
      <a class="page-link" tabindex="-1"><i class="ri-arrow-left-line"></i> Previous</a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#">Next <i class="ri-arrow-right-line"></i></a>
    </li>
  </ul>
</nav>
`

// Right-aligned pagination example
const rightAlignedPaginationExample = `<nav aria-label="Right-aligned pagination example">
  <ul class="pagination justify-content-end">
    <li class="page-item disabled">
      <a class="page-link" tabindex="-1"><i class="ri-arrow-left-line"></i> Previous</a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#">Next <i class="ri-arrow-right-line"></i></a>
    </li>
  </ul>
</nav>
`

// Rounded pagination example with background
const roundedPaginationExample = `<nav aria-label="Rounded pagination example">
  <ul class="pagination pagination-rounded">
    <li class="page-item disabled">
      <a class="page-link" tabindex="-1"><i class="ri-arrow-left-line"></i></a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item active"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#"><i class="ri-arrow-right-line"></i></a>
    </li>
  </ul>
</nav>
`
---

<AdminLayout
  title="Pagination"
  description="Modern and accessible pagination examples for your web applications"
  currentPath="interface/pagination"
  enableComponentPreview={true}
>
  <PageHeader {...paginationPageHeader} />
  <div class="row">
    <div class="col-lg-9 col-xl-9 order-1 order-lg-0">
      <div class="row">
        <div class="col-12">
          <p class="my-0">
            Pagination is an essential UI component that helps users navigate through large sets of
            data or content spread across multiple pages. Our pagination components are built with
            accessibility in mind and offer various styles and configurations to suit different
            design needs.
          </p>
        </div>
      </div>
      <div class="row js-toc-content">
        <div class="col-12">
          <div class="my-3">
            <h3 class="mb-0" id="overview">Overview</h3>
            <p class="py-2">
              The basic pagination component provides intuitive navigation through numbered pages
              with Previous/Next options. Each navigation item is structured with semantic HTML
              using <code>nav</code> and <code>ul</code> elements, where individual items use the <code
                >page-item</code
              > class and links use <code>page-link</code>.
            </p>

            <ComponentPreview
              title="Basic Pagination"
              height="100px"
              component={basicPaginationExample}
              htmlCode={basicPaginationExample}
              cssCode={``}
              jsCode={``}
            />
          </div>
          <div class="my-3">
            <h3 class="mb-0" id="using-icons">Icon Navigation</h3>
            <p class="py-2">
              Enhance visual navigation with Remixicon icons. This example demonstrates icon-only
              navigation buttons with proper accessibility attributes. The <code>aria-label</code> provides
              context for screen readers, while
              <code>aria-hidden="true"</code> prevents icons from being announced.
            </p>

            <ComponentPreview
              title="Icon Navigation"
              height="100px"
              component={iconPaginationExample}
              htmlCode={iconPaginationExample}
              cssCode={``}
              jsCode={``}
            />
          </div>
          <div class="my-3">
            <h3 class="mb-0" id="disabled-and-active-states">Interactive States</h3>
            <p class="py-2">
              Pagination components support different states to indicate current position and
              availability. The <code>disabled</code> class prevents interaction with unavailable pages,
              while <code>active</code>
              highlights the current page. Use <code>aria-current="page"</code> to indicate the active
              page for screen readers.
            </p>

            <ComponentPreview
              title="Interactive States"
              height="100px"
              component={statesPaginationExample}
              htmlCode={statesPaginationExample}
              cssCode={``}
              jsCode={``}
            />
          </div>
          <div class="my-3">
            <h3 class="mb-0" id="sizing">Size Variations</h3>
            <p class="py-2">
              Adjust pagination size to match your design needs using <code>pagination-lg</code> for
              larger controls or
              <code>pagination-sm</code> for more compact displays. These modifiers affect the padding
              and font size of pagination items.
            </p>

            <ComponentPreview
              title="Large Pagination"
              height="100px"
              component={largePaginationExample}
              htmlCode={largePaginationExample}
              cssCode={``}
              jsCode={``}
            />

            <ComponentPreview
              title="Small Pagination"
              height="100px"
              component={smallPaginationExample}
              htmlCode={smallPaginationExample}
              cssCode={``}
              jsCode={``}
            />
          </div>
          <div class="my-3">
            <h3 class="mb-0" id="alignment">Alignment Options</h3>
            <p class="py-2">
              Control pagination positioning with Bootstrap's flexbox utilities. Use <code
                >justify-content-center</code
              >
              for centered alignment or <code>justify-content-end</code> for right alignment. The default
              alignment is left (start).
            </p>

            <ComponentPreview
              title="Centered Pagination"
              height="100px"
              component={centeredPaginationExample}
              htmlCode={centeredPaginationExample}
              cssCode={``}
              jsCode={``}
            />

            <ComponentPreview
              title="Right-Aligned Pagination"
              height="100px"
              component={rightAlignedPaginationExample}
              htmlCode={rightAlignedPaginationExample}
              cssCode={``}
              jsCode={``}
            />
          </div>
          <div class="my-3">
            <h3 class="mb-0" id="rounded-style">Rounded Style</h3>
            <p class="py-2">
              For a modern touch, use the <code>pagination-rounded</code> class to create circular pagination
              buttons. This style works particularly well with icon-only navigation and minimal designs.
            </p>

            <ComponentPreview
              title="Rounded Pagination"
              height="100px"
              component={roundedPaginationExample}
              htmlCode={roundedPaginationExample}
              cssCode={``}
              jsCode={``}
            />
          </div>
        </div>
      </div>
    </div>
    <Toc />
  </div>
</AdminLayout>
