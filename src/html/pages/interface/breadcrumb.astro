// JavaScript for dynamic breadcrumb functionality
const dynamicBreadcrumbJS = `<script>
let breadcrumbLevels = 0;
let breadcrumbHistory = [];
let currentProgress = 65;

function addBreadcrumbLevel() {
  breadcrumbLevels++;
  const breadcrumb = document.getElementById('smart-breadcrumb');

  // Remove active class from current last item
  const currentActive = breadcrumb.querySelector('.active');
  if (currentActive) {
    currentActive.classList.remove('active');
    currentActive.removeAttribute('aria-current');
    const newLink = document.createElement('a');
    newLink.href = '#';
    newLink.textContent = currentActive.textContent;
    currentActive.innerHTML = '';
    currentActive.appendChild(newLink);
  }

  // Add new level
  const newItem = document.createElement('li');
  newItem.className = 'breadcrumb-item active';
  newItem.setAttribute('aria-current', 'page');
  newItem.textContent = \`Dynamic Level \${breadcrumbLevels}\`;

  breadcrumb.appendChild(newItem);

  // If too many levels, implement truncation
  if (breadcrumb.children.length > 6) {
    truncateBreadcrumb(breadcrumb);
  }
}

function truncateBreadcrumb(breadcrumb) {
  const items = Array.from(breadcrumb.children);
  const home = items[0];
  const current = items[items.length - 1];
  const previous = items[items.length - 2];

  // Create ellipsis dropdown
  const ellipsis = document.createElement('li');
  ellipsis.className = 'breadcrumb-item';
  ellipsis.innerHTML = \`
    <span class="dropdown">
      <button class="btn btn-link p-0 dropdown-toggle" data-bs-toggle="dropdown">
        <i class="ri-more-line"></i>
      </button>
      <ul class="dropdown-menu">
        \${items.slice(1, -2).map(item =>
          \`<li><a class="dropdown-item" href="#">\${item.textContent}</a></li>\`
        ).join('')}
      </ul>
    </span>
  \`;

  // Rebuild breadcrumb
  breadcrumb.innerHTML = '';
  breadcrumb.appendChild(home);
  breadcrumb.appendChild(ellipsis);
  breadcrumb.appendChild(previous);
  breadcrumb.appendChild(current);
}

function updateJobStatus() {
  const statusBadge = document.getElementById('job-status');
  const progressBar = document.getElementById('job-progress');

  currentProgress += Math.random() * 10;

  if (currentProgress >= 100) {
    statusBadge.innerHTML = '<i class="ri-check-line"></i> Complete';
    statusBadge.className = 'badge bg-success ms-2';
    progressBar.style.width = '100%';
    clearInterval(statusInterval);
  } else {
    progressBar.style.width = currentProgress + '%';
  }
}

function goBack() {
  if (breadcrumbHistory.length > 0) {
    const previous = breadcrumbHistory.pop();
    console.log('Going back to:', previous);
    // In real implementation, this would navigate
  }
}

function goForward() {
  // Implementation for forward navigation
  console.log('Going forward');
}

function showBreadcrumbHistory() {
  const history = ['Dashboard', 'Reports', 'Analytics', 'Sales Report'];
  alert('Recent pages: ' + history.join(' â†’ '));
}

// Simulate job progress
const statusInterval = setInterval(updateJobStatus, 2000);

// Track breadcrumb navigation
document.addEventListener('DOMContentLoaded', function() {
