    const badge = document.getElementById(badgeId);
    if (!badge) return;

    // Add pulse animation
    badge.classList.add('animate-pulse');

    setTimeout(() => {
      this.updateCounter(badgeId, newCount, options);
      badge.classList.remove('animate-pulse');
    }, 150);
  }

