---
import AdminLayout from "../../layouts/admin/admin-layout.astro";
import PageHeader from "../../components/common/page-header.astro";
import { getPathPrefix } from "../../../utils/path.js";
import ComponentPreview from "../../components/component-preview/component-preview.astro";
import Toc from "../../components/toc/toc.astro";

// Page configuration with breadcrumb navigation
const pageHeaderProps = {
  title: "Form Select Elements",
  breadcrumbs: [
    { label: "Dashboard", href: getPathPrefix("/dashboard") },
    { label: "Forms" },
    { label: "Select Elements", class: "active" }
  ]
};

// Basic select controls with different states
const basicSelectControls = `<div class="row g-3">
    <div class="col-md-4">
        <div class="input-group">
            <span class="input-group-text"><i class="ri-user-settings-line"></i></span>
            <select class="form-select">
                <option selected>Select User Status</option>
                <option value="active">Active <i class="ri-checkbox-circle-line text-success"></i></option>
                <option value="inactive">Inactive <i class="ri-close-circle-line text-danger"></i></option>
                <option value="pending">Pending <i class="ri-time-line text-warning"></i></option>
                <option value="suspended">Suspended <i class="ri-error-warning-line text-danger"></i></option>
                <option value="closed">Closed <i class="ri-lock-line text-muted"></i></option>
            </select>
        </div>
    </div>
    <div class="col-md-4">
        <div class="input-group">
            <select class="form-select rounded-pill">
                <option selected>Choose Service</option>
                <option value="web-dev">Web Development <i class="ri-code-line"></i></option>
                <option value="design">Graphic Design <i class="ri-palette-line"></i></option>
                <option value="marketing">Digital Marketing <i class="ri-line-chart-line"></i></option>
                <option value="content">Content Writing <i class="ri-draft-line"></i></option>
                <option value="seo">SEO Optimization <i class="ri-search-line"></i></option>
            </select>
        </div>
    </div>
    <div class="col-md-4">
        <div class="input-group">
            <span class="input-group-text"><i class="ri-lock-line"></i></span>
            <select class="form-select" disabled>
                <option selected>Select Option (Disabled)</option>
                <option value="1">Option 1</option>
                <option value="2">Option 2</option>
                <option value="3">Option 3</option>
            </select>
        </div>
    </div>
</div>`;

